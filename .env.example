# ==================== 管理员账号配置 ====================
# 默认管理员用户名和密码
ADMIN_USERNAME=jonty
ADMIN_PASSWORD=Djd0521..

# ==================== 安全配置 ====================
# JWT 密钥配置（请修改为随机字符串，至少32位）
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
# 会话超时时间（秒）
SESSION_TIMEOUT=3600
# Token 过期时间（秒）
TOKEN_EXPIRE_TIME=86400

# ==================== 服务配置 ====================
# Web 服务端口
WEB_PORT=8080
# 时区配置
TZ=Asia/Shanghai

# ==================== 数据库配置 ====================
# 数据库文件路径
DB_PATH=/app/data/xianyu_data.db

# ==================== 日志配置 ====================
# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
# 调试模式
DEBUG=false
# 热重载模式
RELOAD=false
# SQL日志配置
SQL_LOG_ENABLED=true
SQL_LOG_LEVEL=INFO

# ==================== 多用户系统配置 ====================
# 是否启用多用户系统
MULTIUSER_ENABLED=true
# 是否允许用户注册
USER_REGISTRATION_ENABLED=true
# 是否启用邮箱验证
EMAIL_VERIFICATION_ENABLED=true
# 是否启用验证码
CAPTCHA_ENABLED=true

# ==================== 自动化功能配置 ====================
# 是否启用自动回复
AUTO_REPLY_ENABLED=true
# 是否启用自动发货
AUTO_DELIVERY_ENABLED=true
# 自动发货超时时间（秒）
AUTO_DELIVERY_TIMEOUT=30
# API 卡片超时时间（秒）
API_CARD_TIMEOUT=10
# 批量数据锁定超时时间（秒）
BATCH_DATA_LOCK_TIMEOUT=5

# ==================== AI 回复配置 ====================
# 是否启用 AI 回复
AI_REPLY_ENABLED=false
# 默认 AI 模型
DEFAULT_AI_MODEL=qwen-plus
# AI API 基础 URL
DEFAULT_AI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
# AI 请求超时时间（秒）
AI_REQUEST_TIMEOUT=30
# AI 最大 Token 数
AI_MAX_TOKENS=100

# ==================== WebSocket 配置 ====================
# WebSocket 连接 URL
WEBSOCKET_URL=wss://wss-goofish.dingtalk.com/
# 心跳间隔（秒）
HEARTBEAT_INTERVAL=15
# 心跳超时时间（秒）
HEARTBEAT_TIMEOUT=5
# Token 刷新间隔（秒）
TOKEN_REFRESH_INTERVAL=3600
# Token 重试间隔（秒）
TOKEN_RETRY_INTERVAL=300
# 消息过期时间（毫秒）
MESSAGE_EXPIRE_TIME=300000

# ==================== Python 环境配置 ====================
# Python 输出缓冲
PYTHONUNBUFFERED=1
# 不生成 .pyc 文件
PYTHONDONTWRITEBYTECODE=1

# ==================== 资源限制配置 ====================
# 内存限制（MB）
MEMORY_LIMIT=512
# CPU 限制
CPU_LIMIT=0.5
# 内存预留（MB）
MEMORY_RESERVATION=256
# CPU 预留
CPU_RESERVATION=0.25
